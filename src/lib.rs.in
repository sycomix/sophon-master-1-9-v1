extern crate sophon_dapps_glue;

use std::collections::HashMap;
use sophon_dapps_glue::{WebApp, File, Info};

#[derive(WebAppFiles)]
#[webapp(path = "../build")]
pub struct App {
	pub files: HashMap<&'static str, File>,
}

impl Default for App {
	fn default() -> App {
		App {
			files: Self::files(),
		}
	}
}

impl WebApp for App {
	fn file(&self, path: &str) -> Option<&File> {
		self.files.get(path)
	}

	fn info(&self) -> Info {
		Info {
			name: "Sophon Wallet",
			version: env!("CARGO_PKG_VERSION"),
			author: "Sophon <admin@sophon.io>",
			description: "Sophon Wallet and Account management tools",
			icon_url: "icon.png",
		}
	}
}

#[test]
fn test_js() {
	sophon_dapps_glue::js::build(env!("CARGO_MANIFEST_DIR"), "build");
}
